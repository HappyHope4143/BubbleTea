root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120
ktlint_function_naming_ignore_when_annotated_with = Composable

[*.{java}]
indent_size = 4
continuation_indent_size = 8

[*.{xml,html}]
indent_size = 4

[*.{json,yml,yaml}]
indent_size = 2

[*.{md}]
trim_trailing_whitespace = false

[*.gradle]
indent_size = 4

[*.properties]
indent_size = 2